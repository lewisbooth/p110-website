@import 'variables/variables'

.dashboard
  padding-top 2rem
  padding-bottom 2rem

  h1
    margin-bottom 4rem

  &__nav
    display flex
    z-index 1

    li 
      background-color black
      margin-right 1rem
      border-radius 4px
      text-align center
      user-select none
      
      a
        helveticaCondensed()
        padding 1.25rem 5rem 1.75rem 5rem
        display block

      &:hover
        background-color midGrey

      &.active
        background-color p110Yellow

  &__filter
    flex-wrap wrap
    margin-bottom 2rem

    a.button
      margin 0 0 0 2rem

    form
      flex-direction row
      align-items center
      margin-bottom 0

      input 
        padding 1rem 1.5rem
        margin 0

      button 
        padding 1rem 2rem
        margin 0

  &__panel
    background-color black
    padding 2rem
    margin-top -.7rem
    z-index 2
    position relative
    border-top 2px solid p110Yellow

  &__edit-video

    &--load-youtube-form
      max-width 100%

      &--input
        display flex

        &--error
          color red
          font-size 1.4rem

        & input.failed
          outline 1px solid red

        button
          margin 0 0 0 1rem
          padding 1rem 2rem

    &--youtube-data
      max-width 100%
      flex-direction row
      justify-content space-between
      
      > div
        display flex
        flex-direction column
        width 50% - 2rem

        input, textarea
          width 100%
          max-width 100%

  &__edit-article
    max-width 100%
    flex-direction row
    justify-content space-between

    label
      display block

    > div
      display flex
      flex-direction column
      width 50% - 2rem

      input, textarea
        width 100%
        max-width 100%

    &--cover

      .dashboard__edit-article--cover--image,
      .dashboard__edit-article--cover--youtube
        display none

      &.youtube 
        
        .dashboard__edit-article--cover--youtube
          display block

      &.image         

        .dashboard__edit-article--cover--image
          display block

.split-selection
  display inline-flex
  background-color #111
  border 2px solid darkGrey 

  &--option
    padding 1rem 1.5rem

    &.active
      background-color midGrey

.form-errors
  margin 2rem 0 0 0
  
  p
    padding 1rem
    background-color rgba(255,0,0,0.25)
    border 1px solid red

#pell
  margin-bottom 2rem

.pell

  &__actionbar
    display flex
    flex-wrap wrap
    justify-content left
    background-color darkGrey 

  &__button
    margin 0
    height 45px
    background-color darkGrey  
  
  &__content
    height 400px
    background #111
    border 2px solid darkGrey
    padding 1rem
    overflow-y scroll

    h1, h2
      helveticaCondensed()
      font-family helveticaNeueCondensedMedium !important
      margin 1rem 0

    h1
      font-size 3.6rem

    h2
      font-size 2.6rem

  
    li
      list-style normal

    ul
      padding-left 4rem

      li
        list-style disc

    a
      color p110Blue

    &:focus
      outline 1px solid p110Yellow
  

@media(max-width: breakpointSmall)
  @import 'admin/_small'