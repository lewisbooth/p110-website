// Main external stylesheet for non-critical styles

@import 'variables/variables'
@import 'main/fonts'

.hidden
  display none

.section-title
  display flex
  justify-content space-between
  flex-wrap wrap
  align-items flex-end
  margin 2rem 0 3rem 0

  h2, a
    margin 0

.news
  background-color lightGrey 
  color black

.video
  background-color black 

.news, .video, .mixtapes
  padding 1rem 0 2rem 0

  &__categories
    display flex
    align-items stretch
    font-size 1.4rem

    li

      a
        color white
        text-decoration none 
        padding .25rem 1.5rem
        display inline-flex
        height 100%
        align-items center

        &.active
          background-color midGrey
          
        &:hover
          background-color p110BlueMidDark

  &__feed
    display flex
    justify-content left
    align-items flex-start
    flex-wrap wrap

    h4
      margin-top 0

    &--entry
      width calc(25% - 1rem)
      margin-bottom 3rem
      box-sizing border-box
      margin-right 1.333rem

      &--image
        padding-top 56.25%
        position relative
        overflow hidden
        display flex
        align-items center
        background-size cover
        background-position center

        img 
          position absolute
          top 0
          left 0


      &--text 
        
        p
          font-size 1.4rem
          margin 0

        h5
          margin 1rem 0 .5rem 0
          line-height 1em

      &:nth-child(4n)
        margin-right 0

      .youtube-embed
        margin-bottom 1rem

      &:hover p
        text-decoration underline

      &--cover
        position relative

        &--play-button
          width 5rem
          position absolute
          top 50%
          left 50%
          transform translateX(-50%) translateY(-50%)

          &--rollover
            opacity 0
            transition opacity 0.35s

      &:hover .mixtapes__feed--entry--cover--play-button--rollover
        opacity 1
          
  &__article
    display flex
    align-items flex-start
    justify-content space-between
    flex-wrap wrap
    padding-bottom 4rem

    & .news__feed--entry, .video__feed--entry
      width 100%

    &--content
      width calc(75% - 12rem)

      &--title
        margin-top 2rem

        h1
          margin-bottom 2.5rem
          margin-top 0

      &--date
        helveticaCondensed()
        margin 2rem 0
        color #777
        display block

      &--text
        display block
        margin-top 2rem

        a
          color p110Blue

          &:hover
            text-decoration underline
      
      &--meta

        h3
          margin 3rem 0 1rem 0
    
    &--sidebar
      width calc(25%)

      > a
        margin-right 0

      h3
        margin-top 2.8rem

.mixtapes__feed--entry
  width calc(100% / 6 - 1rem)
  margin-right 1.2rem

  &:nth-child(4n)
    margin-right 1.2rem

  &:nth-child(6n)
    margin-right 0

.video-production
  background-color black

  &__banner
    
    .container
      position relative
      z-index 1

  &__image
    background-image url('/images/banners/video-production-banner.jpg')
    background-size cover
    background-position center
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index -1

  &__text
    padding 8rem 0 7rem 0
    z-index 2

    p
      margin 0
      text-transform uppercase
      color p110Yellow

    h2
      margin 0 0 2rem 0
      font-size 6.2rem

  &__title
    text-align center
    width 100%
    position absolute
    top 6rem

    h3
      text-transform uppercase
      font-family helveticaNeueMedium
      font-size 1.6rem
      color p110Yellow
      margin 0

    h1
      margin 0
      font-size 6.2rem

  &__page
    padding 6rem containerPadding
    position relative
    max-width 100rem

    &--content
      margin -15rem auto 0 auto
      max-width 82rem
      display flex
      flex-wrap wrap
      justify-content space-between
      align-items flex-start

      > div
        width calc(50% - 2rem)

        &:first-child
          margin-top 2rem

      &--form 
        width 100%

.album
  background-color black
  margin 0
  padding 3rem
  text-align center

  .container > img 
    width auto
    max-width 100%
    margin 2rem auto

  &__platform-links
    display flex
    flex-wrap wrap
    max-width 600px
    margin 0 auto
    justify-content center

    a
      width 33.33%
      min-width 180px
      display inline-block

    img 
      height 50px
      width auto
      margin 0 auto 2rem auto

.instagram-feed
  padding 1rem 0 4rem 0

  &__title
    display flex
    align-items center
    white-space nowrap

    h3
      margin 0 1rem .25rem 1rem

  &__images
    display flex
    justify-content space-between
    align-items flex-start
    flex-wrap wrap

  &__image
    width calc(16.666% - 1rem)

    &--container
      padding-top 100%
      position relative
      background-color black

      img 
        position absolute
        top 0

.subscribe-now
  background-color youtubeRed 
  padding 1rem 0
  display block

  &:hover
    background-color youtubeRedHover

  .container
    display flex
    align-items center
    justify-content center

  &__youtube-logo
    width 4.6rem
  
  h3
    margin -.5rem 1.5rem 0 2rem
  
  &__subscriber-count
    helveticaCondensed()
    font-size 2.6rem
    line-height .9em
    margin 0
    margin-top -.5rem
    color youtubeRedText

.about
  background-color black

  &__content
    padding 2rem containerPadding 6rem containerPadding
    max-width 50rem

    h1
      font-size 6.2rem
      letter-spacing 0.03em
      margin-bottom 4rem

    h2
      font-size 2.4rem
      line-height 1.3em
      font-family helveticaNeueMedium
      text-transform none
      margin-bottom 4rem

.login
  background-color black
  padding 2rem 0

.back-links
  display flex
  flex-wrap wrap
  justify-content space-between
  align-items flex-start

  &__link
    margin-top 1rem
    display inline-block

    &:last-child
      margin-left 2rem

    &:first-child
      margin-left 0

.social-sharing-icons
  width 100
  display flex
  flex-wrap wrap
  color white
  font-size 1.2rem
  white-space nowrap

  a
    padding 1rem 2rem
    box-sizing border-box
    width 33.333%
    display flex
    align-items center
    justify-content center
    flex-wrap wrap

    p
      margin 0 0 0 1.5rem
  
  img 
    height 1.75rem
    width auto

  &--facebook
    background-color facebookBlue

    &:hover
      background-color facebookBlueDark

  &--twitter
    background-color twitterBlue

    &:hover
      background-color twitterBlueDark

  &--google
    background-color googlePlusRed

    &:hover
      background-color googlePlusRedDark

.footer
  background-color black
  padding 1rem 0 0 0
  font-size 1.4rem

  a
    text-decoration underline

    &:hover
      color p110Blue

  .container
    display flex
    justify-content space-between
    flex-wrap wrap

  &__signed-in
    display flex
    flex-wrap wrap

    *
      margin-right 1.5rem

  &__column
    width calc(33.333% - 2rem)
    margin-bottom 3rem

  &__list
    line-height 1.6em

  .nav__social-media-icons
    margin-top 3rem

.lightbox
  position fixed
  background-color rgba(0,0,0,0.75)
  top 0
  left 0
  width 100vw
  height 100vh
  display none
  justify-content center
  align-items center
  z-index 10

  h3
    margin-top 0
    margin-bottom 1rem

  &.active
    display flex

  &__modal
    padding 3rem
    background-color darkGrey
    border-radius 5px

    &--delete-video 
      max-width 90vw
      box-sizing border-box

      h4
        margin 0 0 2rem 0

      p
        margin-bottom 0

      .button
        margin-bottom 0

        &:last-child
          margin-left 2rem

@media(max-width: breakpointLarge)
  @import 'main/_large'
@media(max-width: breakpointMedium)
  @import 'main/_medium'
@media(max-width: breakpointSmall)
  @import 'main/_small'