// Inlined in the <head> for faster page renders
// Try to keep the compiled CSS below 10kb for maximum performance

@import 'variables/variables'
@import 'critical/reset'
@import 'critical/fonts'
@import 'critical/typography'
@import 'critical/grid'
@import 'critical/buttons'

body
  background-color darkGrey
  color white
  padding-top 11.2rem

.nav
  background-color p110Blue
  width 100%
  position fixed
  top 0
  z-index 9
  user-select none

  .container
    display flex
    background-color p110Blue

  &__dropdown
    display flex
    justify-content space-between
    align-items stretch
    flex-grow 3

  &__dropdown--toggle
    display none

  &__logo
    flex-grow 2

    img
      height 5rem
      width 8.7rem
      padding 1rem 0

  &__menu
    display flex
    align-items stretch
    
    li
      // Links should resize to the height of the
      // nav when stretched by the main logo image
      a
        helveticaCondensed()
        font-size 1.8rem
        color white
        padding 0 2.25rem
        display inline-flex
        height 100%
        align-items center

        &.active, &:hover
          background-color p110BlueLight

  &__social-media-icons
    display flex
    align-items center
    width 10rem
    justify-content space-between

    & a
      transition opacity 0.25s
      max-width 30%
      max-height 30%
      min-width 12%
      min-height 12%
      
      &:hover
        opacity 0.75

  &__search
    display flex
    align-items center

    &--box
      background-color p110BlueLight
      border-radius 50px  

      &--input
        background none 
        border none
        display block
        padding 1rem 1.75rem
        color white
        font-size 1.4rem
        width 100%

        &::placeholder
          color p110BlueExtraLight

        &:focus
          outline-width 0

  &__secondary
    background-color p110BlueDark

    .container
      display flex
      justify-content space-between
      background-color p110BlueDark
      overflow-x scroll
      white-space nowrap

      &::-webkit-scrollbar
        display none

    &--menu
      display flex
      align-items stretch
      font-size 1.4rem

      li

        a
          color white
          text-decoration none 
          padding 0 1rem
          margin-right 1rem
          display inline-flex
          height 100%
          align-items center

          &.active, &:hover
            background-color p110BlueMidDark

    &--youtube 
      padding 1rem 2rem
      background-color youtubeRed
      display flex
      align-items center

      &--subscriber-count
        color youtubeRedText

      &:hover
        background-color youtubeRedHover

      img
        width 30px
        height 22px

      p
        helveticaCondensed()
        color white
        margin 0 0 0 1rem

.flash-messages
  display block

  .flash
    display block
    color white
    background-color red
    min-height 3rem

    &--success
      background-color green

    .container
      text-align center

    &__text
      margin .25rem 0
      display inline-block

    &__remove
      padding 0 .75rem .5rem .75rem
      margin 0
      float right
      font-size 2rem
      background-color inherit    
      height 3rem

      &:hover
        cursor pointer
        background-color rgba(255,255,255,0.2)

.p110-album-banner
  margin containerPadding 0
  padding-top 8.05%
  position relative
  background-color black
  
  img
    position absolute
    top 0

  &--mobile
    display none

.promoted
  display flex
  justify-content space-between
  align-items flex-start
  flex-wrap wrap
  margin-bottom 3rem
  
  &__left-column
    width calc(66.666% - 1rem)

    &--video-description
      padding 2rem
      background-color black
      border-bottom 3px solid p110Yellow

      .video-description__title
        font-size 3.2rem

  &__right-column
    width calc(33.333% - 1rem)
    display flex
    align-items flex-start
    flex-wrap wrap

  &__hottest-videos
    background-color p110Blue
    padding 1.6rem 2rem 1rem 2rem
    margin-bottom 2rem
    width 100%
    box-sizing border-box

    h1
      font-size 3.2rem
      line-height 1em
      margin 0

    h2
      font-size 1.6rem
      line-height 1.4em
      margin 0
      color p110BlueExtraLight

    &--list
      margin-top 1rem

      &--item
        display flex
        align-items center
        justify-content space-between
        padding 1.1rem 1.6rem 1.3rem 1.6rem
        margin 0 -2rem

        &:hover
          background-color p110BlueDark

        .video-description
          line-height .75em
          margin-left 1.5rem
          padding-right 1rem
          flex-grow 1

          &__type
            font-size 1.2rem
            color p110BlueExtraLight
            
          &__title
            line-height 1em
            font-size 1.8rem

        .video-viewcount
          line-height 1em
          text-align right
          
          &__views
            text-transform uppercase
            font-size 1.2rem
            color p110BlueExtraLight
        
.play-icon
  width 2.8rem
  height 2.8rem

.youtube-embed
  width 100%
  padding-top 56.25%
  position relative
  background-color black

  iframe, img
    position absolute
    width 100%
    height 100%
    top 0

  &__featured
    position absolute
    margin 0
    left 0
    top 4rem
    background-color p110Yellow
    helveticaCondensed()
    font-size 3.2rem
    color white
    padding 1rem 2rem 1.25rem 2rem

.video-description
  
  &__type
    line-height 1.2em
    text-transform uppercase
    color p110Yellow

  &__title
    helveticaCondensed()
    font-size 2.4rem

form
  display flex
  flex-direction column
  width 300px
  margin-bottom 2rem

  label
    margin-bottom .5rem

  input, textarea
    background darkGrey 
    color #ccc
    font-size 1.4rem
    border none 
    margin-bottom 1rem
    padding .5rem

  button
    align-self flex-start

@media(max-width: breakpointLarge)
  @import 'critical/_large'
@media(max-width: breakpointMedium)
  @import 'critical/_medium'
@media(max-width: breakpointSmall)
  @import 'critical/_small'