.container
  padding 0 1rem

.mobile-hide
  display none

.p110-album-banner
  padding-top 34.23%
  margin 1rem 0

  &--mobile
    margin-top 2rem
    display block

.youtube-embed
  
  &__featured
    top auto
    width 100%
    height 4.2rem
    padding 1rem 2rem
    font-size 2.4rem
    box-sizing border-box

.promoted
  margin-bottom 2rem

  &__left-column
    margin 2rem 0

    &--video-description
      margin-top 4.4rem

  &__right-column
    flex-wrap wrap

  &__hottest-videos, &__store-banner
    width 100%