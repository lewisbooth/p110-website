// Add a <link rel="preload" src="..."> to the <head> for each critical font
// This allows supported browsers to request the font before parsing CSS

@font-face
  font-family "Helvetica Neue Medium"
  font-weight 400
  src url(/fonts/helvetica-neue-medium.woff2) format("woff2"),
      url(/fonts/helvetica-neue-medium.woff) format("woff")

@font-face
  font-family "Helvetica Neue Condensed Medium"
  font-weight 400
  src url(/fonts/helvetica-neue-condensed-medium.woff2) format("woff2"),
      url(/fonts/helvetica-neue-condensed-medium.woff) format("woff")