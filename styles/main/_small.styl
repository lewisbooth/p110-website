.news, .video, .artist, .latest-videos

  .space-between
    flex-direction column
    align-items flex-start

    ul
      white-space nowrap
      flex-wrap wrap

      li
        margin-bottom 1rem

  h2
    font-size 3.2rem

  &__feed--entry
    width 100%
    display flex
    align-items flex-start
    justify-content space-between

  &__article

    &--content, &--sidebar
      width 100%

.news__article 
    h1
      margin-top 2rem

.latest-videos
  padding-bottom 1rem

  &__feed
    margin-top 1rem

    &--entry
      margin 0
      border-bottom 1px solid #333
      padding 1rem 0

      &:last-child
        border-bottom none

      .youtube-embed
        width calc(40% - .5rem)
        padding-top 22.5%
        margin 0

      .video-description
        width calc(60% - .5rem)

.news__feed--entry
  border-bottom 1px solid #ccc

  &:last-child
    border-bottom none

  img 
    width calc(40% - .5rem)

  &--text
    width calc(60% - .5rem)

  h5
    margin-top 0

.artists

  &__feed
    padding 0 1rem

    &--entry
      width 50%
      margin-bottom 0
      flex-direction column
      text-align center

      &:hover
        background none

      img 
        margin 1rem 0

      &--info
        margin 0

.artist__article--content--featured-image
  display none

  &--mobile
    display block
    margin-bottom 4rem

.instagram-feed

  h2
    font-size 3.2rem

  &__image
    width calc(33.333% - .5rem)
    margin-bottom .5rem

.subscribe-now
  padding 1rem 0

  h3
    margin 0 2rem 0 2rem
    font-size 1.8rem
    
  &__subscriber-count
    font-size 1.8rem
    margin-top 0

  &__youtube-logo
    width 3.5rem

.footer
  .container
    flex-direction column
  
  &__column
    width 100%