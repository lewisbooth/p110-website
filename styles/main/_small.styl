.news, .video, .mixtapes

  .space-between
    flex-direction column
    align-items flex-start

    ul
      white-space nowrap
      flex-wrap wrap

      li
        margin-bottom 1rem

  h2
    font-size 3.2rem

  &__feed--entry
    width 100%
    display flex
    align-items flex-start
    justify-content space-between

  &__article

    &--content, &--sidebar
      width 100%

.news__article 

    h1
      margin-top 2rem

.video
  padding-bottom 1rem

  &__feed
    margin-top 1rem

    &--entry
      margin 0
      border-bottom 1px solid #333
      padding 1rem 0

      &:last-child
        border-bottom none

      .youtube-embed
        width calc(40% - .5rem)
        padding-top 22.5%
        margin 0

      .video-description
        width calc(60% - .5rem)

.news__feed--entry
  border-bottom 1px solid #ccc
  padding 0 0 1rem 0
  margin-bottom 2rem

  &:last-child
    border-bottom none

  &--image, .youtube-embed
    width calc(40% - .5rem)
    padding-top calc((40% - .5rem) * .56)
    height auto

  &--text
    width calc(60% - .5rem)

  h5
    margin-top 0

.mixtapes

  &__feed
    flex-direction row

    &--entry
      width calc(50% - 1rem)
      margin-right 1rem
      flex-direction column
      margin-bottom 1.5rem

      &:nth-child(2n)
        margin-right 0

  &__article--content--sections
    flex-direction column

    > div
      width 100%

      &:nth-child(2)
        padding 3rem 0

      .button

        img 
          max-width 3rem

.social-sharing-icons p
  display none

.video-production

  &__title
    position relative
    text-align left
    top 0
    padding 2rem 0 0 0

    h1
      font-size 3.6rem

  &__page
    padding 2rem 1rem

    &--content
      margin -5rem auto 0 auto
      flex-direction column

      > div
        width 100%

.about

  h1
    font-size 3.6rem

.instagram-feed

  h2
    font-size 3.2rem

  &__image
    width calc(33.333% - .5rem)
    margin-bottom .5rem

.subscribe-now
  padding 1rem 0

  h3
    margin 0 2rem 0 2rem
    font-size 1.8rem
    
  &__subscriber-count
    font-size 1.8rem
    margin-top 0

  &__youtube-logo
    width 3.5rem

.footer
  .container
    flex-direction column
  
  &__column
    width 100%
    margin-bottom 1rem

  &__signed-in
    flex-direction column

    a
      margin-bottom 2rem