extends layout

block extraFooterScripts
  script(async src="/js/libs/axios.min.js")
  script(async src="/js/infiniteScroll.js")

block body
  section.mixtapes
    .container
      .section-title
        h2 Mixtapes
        a.underline-hover(href="/mixtapes") View All           
      .mixtapes__feed#infinite-scroll
        if mixtapes.length
          for mixtape in mixtapes
            +mixtapeListing(mixtape)
        else 
          p No Mixtapes Found
      .form-errors.hidden
        p Error loading mixtapes