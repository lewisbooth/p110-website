include templates/head
include templates/nav
include templates/footer

doctype html
html
  +head
  body(class=(user ? 'admin' : ''))
    +nav
    block messages
      if flashes
        .flash-messages
          - const categories = Object.keys(flashes)
          each category in categories
            each message in flashes[category]
              .flash(class=`flash--${category}`)
                .container
                  p.flash__text!= message
                  button.flash__remove(onClick="this.parentElement.parentElement.remove()") &times;
    block p110AlbumBanner
      .container
        a(href="/album")
          .p110-album-banner
            img(src="/images/banners/p110-album-banner-desktop.png" alt="P110 the Album - Available Now")
    block body
    +footer